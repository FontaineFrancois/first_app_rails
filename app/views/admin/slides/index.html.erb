<p id="notice"><%= notice %></p>

<h1>Listing Slides</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slides.each do |slide| %>
      <td>
        <tr><%= image_tag slide.picture.url(:medium) %></tr>
      </td>
      <tr>
        <td><%= slide.name %></td>
        <td><%= slide.desc.html_safe %></td>
        <td><%= slide.author.html_safe %></td>
        <td><%= link_to 'Show', admin_slide_path(slide) %></td>
        <td><%= link_to 'Edit', edit_admin_slide_path(slide) %></td>
        <td><%= link_to 'Destroy', admin_slide_path(slide), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= slide.published %></td>
        <td><%= slide.published_to %></td>
        <td><%= slide.published_from %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slide', new_admin_slide_path %>
